
<p>
  <strong>Titular:</strong>
  <%= @news.titular %>
</p>

<p>
  <strong>Bajada:</strong>
  <%= @news.bajada %>
</p>

<p>
  <strong>Cuerpo:</strong>
  <%= @news.cuerpo %>
</p>

<p>
  <strong>Fecha de publicaci√≥n:</strong>
  <%= l(@news.created_at, format: '%B, %d %Y %H:%M:%S') %>
</p>
<div class ="container">
  <h2 id="h2">Commentarios</h2>
  <% @news.opinions.each do |opinion| %>
    <div class="well">
      <h2><%= opinion.usuario %></h2>
      <p><strong><%= opinion.usuario %></strong></p>
      <p class="text-muted">Added on
      <%= l(opinion.created_at, format: '%B, %d %Y %H:%M:%S') %></p>
      <blockquote>
        <p><%= opinion.cuerpo %></p>
      </blockquote>
    </div>

  <% end %>
</div>
<% if current_user %>
<div class="container">
  <h3>Agrega un comentario</h3>
  <%= form_for([@news, @news.opinions.build]) do |f| %>
    <p>
      <%= f.label :usuario %><br>
      <%= f.text_field :usuario, required: true,  :value => current_user.email %>
    </p>
    <p>
      <%= f.label :cuerpo %><br>
      <%= f.text_area :cuerpo, required: true %>
    </p>
    <p>
      <%= f.submit "Agregar", :id => "save-button" %>
    </p>
  <% end %>
<% end %>
</div>
<%= link_to 'Edit', edit_news_path(@news) %> |
<%= link_to 'Back', news_index_path %>
