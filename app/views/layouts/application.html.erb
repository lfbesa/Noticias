<!DOCTYPE html>
<html>
  <head>
    <title>Noticias</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color:#f3f3f3;">
    <header class="header sticky sticky--top js-header">
      <div class="grid">
        <nav class="navigation">
          <ul class="navigation__list navigation__list--inline">
            <li><%=link_to image_tag("logo.png", alt: "Logo Image", size: "40"), news_index_path, :class => 'is-iactive' %></li>
            <li class="navigation__item"><%= link_to "Home", news_index_path, :class => 'is-active' %></li>
            <% if user_signed_in? %>
              <li class="navigation__item">Welcome <strong><%= current_user.email %>!</strong></li>
              <li class="navigation__item"><%= link_to 'Edit profile', edit_user_registration_path, :class => 'is-iactive' %> </li>
              <li class="navigation__item"><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'is-iactive'  %></li>
            <% else %>
              <li class="navigation__item"><%= link_to "Sign up", new_user_registration_path, :class => 'is-iactive'  %></li>
              <li class="navigation__item"><%= link_to "Login", new_user_session_path, :class => 'is-iactive'  %></li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
